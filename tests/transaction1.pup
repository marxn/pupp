def transfer = (&user1 : set, &user2 : set, amount : decimal) : bool
{
        def ret = false;

        transaction(user1, user2)
        {
                user1["balance"] = user1["balance"] - amount;

                if(user1["balance"] < 0)
                {
                        print "insufficient funds",NL;
                        rollback;
                }

                user2["balance"] = user2["balance"] + amount;
                ret = true;
                commit;
        }
        return ret;
};

